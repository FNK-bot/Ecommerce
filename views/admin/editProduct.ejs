                        <img src="/admin/assets/images/catagory/<%=product.images[0]%>" alt="" srcset="" id="boxImage"
                            style="object-fit: fill;height: 300px;width: 200px">
                    </div>
                    <div class="inputBox text-center col-6"
                        style="height: 345px;width: 230px;background-color:aliceblue;" id="inputBox2">
                        <img src="/admin/assets/images/catagory/<%=product.images[1]%>" alt="" srcset="" id="boxImage"
                            style="object-fit: fill;height: 300px;width: 200px">
                    </div>
