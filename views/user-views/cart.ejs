<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart Page</title>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css"
        integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">


    <style>
        body {
            margin-top: 20px;
            background-color: #f1f3f7;
        }

        .avatar-lg {
            height: 5rem;
            width: 5rem;
        }

        .font-size-18 {
            font-size: 18px !important;
        }

        .text-truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        a {
            text-decoration: none !important;
        }

        .w-xl {
            min-width: 160px;
        }

        .card {
            margin-bottom: 24px;
            box-shadow: 0 2px 3px #e4e8f0;
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 1px solid #eff0f2;
            border-radius: 1rem;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
        }

        .quantity-selector button {
            width: 30px;
            height: 30px;
            background-color: #f1f3f7;
            border: 1px solid #ddd;
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity-selector input {
            width: 40px;
            height: 30px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 0 5px;
        }
    </style>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <div class="container">
        <% if(cart.length>0){%>
            <div class="row">
                <div class="col-xl-8">
                    <% for(let i=0;i<cart.length;i++) {%>
                        <div class="card border shadow-none">
                            <div class="card-body">
                                <div class="d-flex align-items-start border-bottom pb-3">
                                    <div class="me-4">
                                        <img src="/admin/assets/images/catagory/<%= product[i]?.images[0] %>"
                                            alt="pr-img" class="avatar-lg rounded">
                                    </div>
                                    <div class="flex-grow-1 align-self-center overflow-hidden"
                                        style="padding-left: 10px;">
                                        <div>
                                            <h5 class="text-truncate font-size-18"><a href="#" class="text-dark">
                                                    <%= product[i]?.name %>
                                                </a></h5>
                                            <p class="text-muted mb-0">
                                                <i class="bx bxs-star text-warning"></i>
                                                <i class="bx bxs-star text-warning"></i>
                                                <i class="bx bxs-star text-warning"></i>
                                                <i class="bx bxs-star text-warning"></i>
                                                <i class="bx bxs-star-half text-warning"></i>
                                            </p>
                                            <p class="mb-0 mt-1">Color : <span class="fw-medium">
                                                    <%= product[i]?.color %>
                                                </span></p>
                                        </div>
                                    </div>
                                    <div class="flex-shrink-0 ms-2">
                                        <ul class="list-inline mb-0 font-size-16">
                                            <li class="list-inline-item">
                                                <a href="/deleteCartItem?id=<%=cart[i]?.ProductId%>"
                                                    class="text-muted px-1">
                                                    <i class="mdi mdi-trash-can-outline"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="#" class="text-muted px-1">
                                                    <i class="mdi mdi-heart-outline"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mt-3">
                                                <p class="text-muted mb-2">Price</p>
                                                <h5 class="mb-0 mt-2"><span class="text-muted me-2"></span>$
                                                    <%=product[i]?.price%>
                                                </h5>
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div class="mt-3">
                                                <p class="text-muted mb-2">Quantity</p>
                                                <div class="quantity-selector">


                                                    <button class="btn-minus"
                                                        onclick=" onMinus( '<%= cart[i]?.quantity %>' , '<%= cart[i]?.ProductId %>' ) ">-</button>
                                                    <input type="text" value="<%= cart[i]?.quantity %>"
                                                        id="qnt-display-<%= cart[i]?.ProductId %>" readonly>
                                                    <button class="btn-plus"
                                                        onclick=" onPlus( '<%= cart[i]?.quantity %>' , '<%= cart[i]?.ProductId %>' ) ">+</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mt-3">
                                                <p class="text-muted mb-2">Total</p>
                                                <h5 id="singleTotal-<%= cart[i]?.ProductId %>"> $<%= product[i]?.price *
                                                        cart[i]?.quantity %>
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end card -->
                        <% } %>
                            <!-- Repeat similar card structure for other products -->
                            <div class="row my-4">
                                <div class="col-sm-6">
                                    <a href="/shop" class="btn btn-link text-muted">
                                        <i class="mdi mdi-arrow-left me-1"></i> Continue Shopping </a>
                                </div>
                                <div class="col-sm-6">
                                    <div class="text-sm-end mt-2 mt-sm-0 " style="padding-left: 220px;">
                                        <a href="/checkOut" class="btn btn-success">
                                            <i class="mdi mdi-cart-outline me-1"></i> Checkout </a>
                                    </div>
                                </div>
                            </div>
                </div>
                <div class="col-xl-4">
                    <div class="mt-5 mt-lg-0">
                        <div class="card border shadow-none">
                            <div class="card-header bg-transparent border-bottom py-3 px-4">
                                <h5 class="font-size-16 mb-0">Order Summary <span class="float-end">#MN0124</span></h5>
                            </div>
                            <div class="card-body p-4 pt-2">
                                <div class="table-responsive">
                                    <table class="table mb-0">
                                        <tbody>
                                            <tr>
                                                <td>Sub Total :</td>
                                                <td class="text-end" id="sub-total">$ <%= subTotal %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Discount :</td>
                                                <td class="text-end" id="discount">- $ <%= discount %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Shipping Charge :</td>
                                                <td class="text-end">$ 00</td>
                                            </tr>
                                            <tr>
                                                <td>Estimated Tax :</td>
                                                <td class="text-end">$ 00.00</td>
                                            </tr>
                                            <tr class="bg-light">
                                                <th>Total :</th>
                                                <td class="text-end">
                                                    <span class="fw-bold" id="total">
                                                        $ <%= total %>
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- end table-responsive -->
                                <div class="mt-4">
                                    <h5 class="font-size-16 mb-3">Apply Discount Coupon</h5>
                                    <%if(coupen=='no' ){%>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Enter coupon code"
                                                id="coupenInput">
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button"
                                                    id="applybtn">Apply</button>
                                            </div>
                                        </div>
                                        <p class="d-none" id="coupenMessage"></p>
                                        <%}else{%>
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="<%=coupen%>"
                                                    id="coupenInput" value="<%=coupen%>" disabled>
                                                <div class="input-group-append">
                                                    <button class="btn btn-danger" type="button"
                                                        id="applybtn">Remove</button>
                                                </div>
                                            </div>
                                            <p class="alert-danger" id="coupenMessage">coupen Applied</p>
                                            <%}%>

                                                <a href="/mycoupens">View My Coupens <span
                                                        class="mdi mdi-tag-arrow-right-outline"></span>
                                                </a>
                                </div>
                            </div>
                        </div>
                        <!-- end card -->
                    </div>
                </div>
            </div>
            <%}else{%>
                <div class="not-found text-center">
                    <p class="alert alert-danger mt-5">Add Something To cart</p>
                    <a href="/shop" class="btn btn-link text-muted">
                        <i class="mdi mdi-arrow-left me-1"></i> Continue Shopping </a>
                    <div class="not-found-img mt-4">
                        <img src="data:image/png;base64,"
                            alt="">
                    </div>
                </div>
                <% } %>
    </div>
    <!-- Bootstrap and JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>

        function onPlus(qnt, cid) {
            axios.put('/incrementQnt', { qnt, cid })
                .then((response) => {
                    if (response.data.ms) {
                        Swal.fire({
                            title: "CART",
                            text: response.data.message,
                            icon: response.data.messageType,
                            footer: `Cart updated`
                        });
                    }
                    console.log(response.data)

                    const quantityInput = document.getElementById(`qnt-display-${cid}`)
                    const productTotal = document.getElementById(`singleTotal-${cid}`)
                    const subTotal = document.getElementById('sub-total')
                    const total = document.getElementById('total')
                    productTotal.innerText = `$${response.data.singleTotal}`;
                    quantityInput.value = response.data.cartQnt;

                    subTotal.innerText = `$${response.data.subTotal}`;
                    total.innerText = `$${response.data.total}`;
                    console.log(quantityInput.value)
                    const discount = document.getElementById('discount')
                    discount.innerText = '- $00'

                }).catch((error) => {
                    console.log(error);
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: "Something went wrong!",
                        footer: 'Cannot Add item to cart'
                    });
                })
        }


        function onMinus(qnt, cid) {


            axios.put('/decrementQnt', { qnt, cid })
                .then((response) => {
                    if (response.data.ms) {
                        Swal.fire({
                            title: "CART",
                            text: response.data.message,
                            icon: response.data.messageType,
                            footer: `Cart updated`
                        });
                    }

                    const quantityInput = document.getElementById(`qnt-display-${cid}`)
                    const productTotal = document.getElementById(`singleTotal-${cid}`)
                    const subTotal = document.getElementById('sub-total')
                    const total = document.getElementById('total')
                    const discount = document.getElementById('discount')
                    discount.innerText = '- $00'

                    console.log(response.data)
                    productTotal.innerText = `$${response.data.singleTotal}`;
                    subTotal.innerText = `$${response.data.subTotal}`;
                    total.innerText = `$${response.data.total}`;
                    quantityInput.value = response.data.cartQnt;
                    console.log(quantityInput.value)

                }).catch((error) => {
                    console.log(error);
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: "Something went wrong!",
                        footer: 'Cannot Add item to cart'
                    });
                })
        }


        //Discount coupen fucntions
        const total = document.getElementById('total');
        const applyBtn = document.getElementById('applybtn');
        const coupenInput = document.getElementById('coupenInput')
        const coupenMessage = document.getElementById('coupenMessage')
        const discount = document.getElementById('discount')
        function errorMessage(message, type = 'error') {
            // Swal.fire({
            //     position: "top-end",
            //     icon: type,
            //     title: message,
            //     showConfirmButton: false,
            //     timer: 1500
            // });
            coupenMessage.className = type == 'success' ? 'alert-success' : 'alert-danger';
            coupenMessage.innerText = message
        }
        applyBtn.addEventListener('click', () => {
            if (coupenInput.value.length > 0) {
                if (applyBtn.innerText == 'Apply') {
                    axios.put('/apply-coupen', { code: coupenInput.value }).then((res) => {
                        if (res.data.isValid) {
                            total.innerText = '$' + res.data.total;
                            discount.innerText = '- $' + res.data.discount
                            coupenInput.disabled = true
                            applyBtn.innerText = 'Remove';
                            applyBtn.className = 'btn btn-danger';

                            errorMessage(res.data.msg, 'success')

                        }
                        else {
                            errorMessage(res.data.msg)
                        }
                    }).catch((err) => {
                        errorMessage(err)
                    })
                }
                if (applyBtn.innerText == 'Remove') {
                    axios.put('/cancel-coupen', { code: coupenInput.value }).then((res) => {
                        if (res.data.isValid) {
                            applyBtn.innerText = 'Apply';
                            applyBtn.className = 'btn btn-primary';
                            coupenInput.disabled = false
                            total.innerText = '$' + res.data.total;
                            discount.innerText = '$' + res.data.discount
                            errorMessage(res.data.msg, 'success')
                        }
                        else {
                            errorMessage(res.data.msg)
                        }
                    })
                }
            }
            else {
                errorMessage('Enter the coupen code')
            }
        })

    </script>
</body>

</html>