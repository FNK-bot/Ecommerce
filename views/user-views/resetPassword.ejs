<%- include('./partials/alertMessages'); %>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="description" content="This is a login page template based on Bootstrap 5">
	<title>reset password</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body>
	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-sm-center h-100">
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
					<div class="text-center my-5">
						<img src="/img/core-img/logo.png" alt="logo" width="100">
					</div>
					<div class="card shadow-lg">
						<div class="card-body p-5">
							<h1 class="fs-4 card-title fw-bold mb-4">Reset Password</h1>
							<form action="/resetPassword" method="POST" class="needs-validation" novalidate=""  >
								<!-- onsubmit="return validate()" -->
								<div class="mb-3">
									<label class="mb-2 text-muted" for="password">New Password</label>
									<input id="newPass" type="password" class="form-control" name="newPass" value="" required autofocus>
									<div class="invalid-feedback">
										Password is required	
									</div>
								</div>

								<div class="mb-3">
									<label class="mb-2 text-muted" for="password-confirm">Confirm Password</label>
									<input id="conPass" type="password" class="form-control" name="conPass" required>
								    <div class="invalid-feedback">
										Please confirm your new password
							    	</div>
								</div>

								<div class="d-flex align-items-center">
									
									<button type="submit" class="btn btn-primary ">
										Reset Password	
									</button>
									<div class=""style="padding-left: 10px;">  </div>
									<a href="/forgotPassword" class="btn btn-success" >Resend Link	</a>
								</div>
								</div>
								
							</form>
						</div>
					</div>
					<div class="text-center mt-5 text-muted">
						Copyright &copy; 2017-2024 &mdash; Essence
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="/js/login.js"></script>
	
    <script>
        function validate() {
            const newPass = document.getElementById('newPass').value;
            const confirmPass = document.getElementById('conPass').value;
            const MIN_LENGTH = 8;

            if (newPass.length < MIN_LENGTH) {
                alert('New password must be at least 8 characters long.');
                return false;
            }
            
            if (confirmPass.length < MIN_LENGTH) {
                alert('Confirm password must be at least 8 characters long.');
                return false;
            }
            
            if (newPass !== confirmPass) {
                alert('Passwords do not match.');
                return false;
            }
            
            return true; // If all validations pass, the form will be submitted
        }
    </script>
</body>
</html>