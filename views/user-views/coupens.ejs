<%- include('./partials/header'); %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>My Coupons and Rewards</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <!-- Option 1: Include in HTML -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
        <style>
            .wishlist-container {
                max-width: 900px;
                margin: 50px auto;
                padding: 20px;
                background-color: #fff;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                border-radius: 8px;
            }

            .coupon-card {
                border: 2px solid #007bff;
                border-radius: 10px;
                padding: 20px;
                margin-bottom: 20px;
                background-color: #f8f9fa;
            }

            .coupon-name {
                font-weight: bold;
                font-size: 1.5rem;
            }

            .coupon-percentage {
                font-size: 2rem;
                color: #28a745;
            }
        </style>
    </head>

    <body>
        <div class="pp" style="padding-top:70px ;">
            <div class="wishlist-container mt-5">
                <div class="row">
                    <div class="col-1"><i class="fa fa-chevron-circle-left fa-2x" aria-hidden="true"
                            onclick="return history.back()"></i></div>
                    <div class="col-11">
                        <h1 class="text-center mb-4">My Coupons and Rewards</h1>
                    </div>
                </div>
                <%if(coupens.length>0){%>
                    <%for(let i=0;i<coupens.length;i++){%>
                        <!-- Coupon 1 -->
                        <div class="coupon-card">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="coupon-name">
                                        <%=coupens[i].name%>
                                    </div>
                                    <div class="coupon-percentage">
                                        <%=coupens[i].percentage%>% Off
                                    </div>
                                    <p>Use this coupon to get a <%=coupens[i].percentage%>% discount on your next
                                            purchase.
                                    </p>
                                </div>
                                <div class="col-md-4 text-md-end text-center">
                                    <button class="btn btn-primary"
                                        onclick="copyToClipboard('<%=coupens[i].code%>')">Copy
                                        Code</button>
                                </div>
                            </div>
                        </div>
                        <%}%>
                            <%}else{%>
                                <div class="not-found  text-center mt-5">
                                    <h5 class="mt-5 alert alert-danger">No Coupens Found</h5>
                                </div>
                                <%}%>

            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <!-- Bootstrap JS and dependencies -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script>
            let backButton = document.getElementById('backButton');
            backButton.addEventListener('click', () => {
                history.back()
            })

            function copyToClipboard(text) {
                navigator.clipboard.writeText(text).then(() => {
                    Swal.fire({
                        icon: "success",
                        title: "Code copied successfully",
                        showConfirmButton: false,
                        timer: 1500
                    });
                }).catch(err => {
                    alert('Failed to copy the coupon code. Please try again.');
                });
            }
        </script>
    </body>

    </html>
    <%- include('./partials/footer'); %>