<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout Page</title>
    <link rel="stylesheet" href="/css/checkOut.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <div class="container">
        <form id="checkout-form" method="POST" action="/checkOut">

            <div class="row">
                <div class="col-xl-8">

                    <div class="card">
                        <div class="card-body">
                            <ol class="activity-checkout mb-0 px-4 mt-3">

                                <!-- Address Selection -->
                                <li class="checkout-item">
                                    <div class="avatar checkout-icon p-1">
                                        <div class="avatar-title rounded-circle bg-primary">
                                            <i class="bx bxs-truck text-white font-size-20"></i>
                                        </div>
                                    </div>
                                    <div class="feed-item-list">
                                        <div>
                                            <h5 class="font-size-16 mb-1">Select Address</h5>
                                            <p class="text-muted text-truncate mb-3"> <a href="/add-new-address" class="btn btn-link text-muted">+ Add New Address </a></p>

                                            <div class="mb-3">
                                                <div class="row">
                                                    <% let count = 0 %>
                                                    <% if(address.length > 0){ %>
                                                    <% for(let i = 0; i < address.length; i++){ %>
                                                    <% if(!address[i].isDeleted) { %>
                                                    <div class="col-lg-4 col-sm-6">
                                                        <div>
                                                            <label class="card-radio-label mb-0">
                                                                <input type="radio" name="address" value="<%= address[i]._id %>" class="card-radio-input" onclick="getAddress('<%= address[i]._id %>')" required>
                                                                <div class="card-radio text-truncate p-3">
                                                                    <span class="fs-14 mb-4 d-block">Address <%= ++count%> </span>
                                                                    <span class="fs-14 mb-2 d-block"><%= address[i].name %></span>
                                                                    <span class="text-muted fw-normal text-wrap mb-1 d-block"><%= address[i].addressLine %></span>
                                                                    <span class="text-muted fw-normal d-block"><%= address[i].mobile %></span>
                                                                </div>
                                                            </label>
                                                            <div class="edit-btn bg-light rounded">
                                                                <a href="/editAddress?id=<%= address[i]._id %>" data-bs-toggle="tooltip" title="Edit">
                                                                    <i class="bx bx-pencil font-size-16"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                    <% } %>
                                                    <% } else { %>
                                                    <div class="no-address">
                                                        <a class="btn-link mb-3" href="/add-new-address">No Address Found. Click to add new.</a>
                                                    </div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>

                                <!-- Payment Info -->
                                <li class="checkout-item">
                                    <div class="avatar checkout-icon p-1">
                                        <div class="avatar-title rounded-circle bg-primary">
                                            <i class="bx bxs-wallet-alt text-white font-size-20"></i>
                                        </div>
                                    </div>
                                    <div class="feed-item-list">
                                        <div>
                                            <h5 class="font-size-16 mb-1">Payment Info</h5>
                                            <p class="text-muted text-truncate mb-4">Select Payment Method</p>
                                        </div>
                                        <div>
                                            <h5 class="font-size-14 mb-3">Payment method :</h5>
                                            <div class="row">
                                                <div class="col-lg-3 col-sm-6">
                                                    <div>
                                                        <label class="card-radio-label">
                                                            <input type="radio" name="pay-method" value="card" class="card-radio-input" required>
                                                            <span class="card-radio py-3 text-center text-truncate">
                                                                <i class="bx bx-credit-card d-block h2 mb-3"></i>
                                                                Credit / Debit Card
                                                            </span>
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-sm-6">
                                                    <div>
                                                        <label class="card-radio-label">
                                                            <input type="radio" name="pay-method" value="paypal" class="card-radio-input">
                                                            <span class="card-radio py-3 text-center text-truncate">
                                                                <i class="bx bxl-paypal d-block h2 mb-3"></i>
                                                                Paypal
                                                            </span>
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-sm-6">
                                                    <div>
                                                        <label class="card-radio-label">
                                                            <input type="radio" name="pay-method" value="cod" class="card-radio-input" checked="">
                                                            <span class="card-radio py-3 text-center text-truncate">
                                                                <i class="bx bx-money d-block h2 mb-3"></i>
                                                                Cash on Delivery
                                                            </span>
                                                        </label>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ol>
                        </div>
                    </div>

                    <!-- Continue Shopping and Proceed -->
                    <div class="row my-4">
                        <div class="col">
                            <a href="/shop" class="btn btn-link text-muted">
                                <i class="mdi mdi-arrow-left me-1"></i> Continue Shopping
                            </a>
                        </div>
                        <div class="col text-end">
                            <button class="btn btn-success" type="submit">
                                <i class="mdi mdi-cart-outline me-1"></i> Proceed
                            </button>
                        </div>
                        <div class="col text-end">
                            <a href="/cart" class="btn btn-link text-muted">
                                View Cart <i class="mdi mdi-arrow-right me-1"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="col-xl-4">
                    <div class="card checkout-order-summary">
                        <div class="card-body">
                            <div class="p-3 bg-light mb-3">
                                <h5 class="font-size-16 mb-0">Order Summary <span class="float-end ms-2">#MN0124</span></h5>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-centered mb-0 table-nowrap">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0" style="width: 110px;" scope="col">Product</th>
                                            <th class="border-top-0" scope="col">Product Desc</th>
                                            <th class="border-top-0" scope="col">Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i = 0; i < cart.length; i++){ %>
                                        <tr>
                                            <th scope="row"><img src="/admin/assets/images/catagory/<%= product[i].images[0] %>" alt="product-img" class="avatar-lg rounded"></th>
                                            <td>
                                                <h5 class="font-size-16 text-truncate"><a href="#" class="text-dark"><%= product[i].name %></a></h5>
                                                <p class="text-muted mb-0">
                                                    <i class="bx bxs-star text-warning"></i>
                                                    <i class="bx bxs-star text-warning"></i>
                                                    <i class="bx bxs-star text-warning"></i>
                                                    <i class="bx bxs-star text-warning"></i>
                                                    <i class="bx bxs-star-half text-warning"></i>
                                                </p>
                                                <p class="text-muted mb-0 mt-1">$ <%= product[i].price %> x <%= cart[i].quantity %> </p>
                                            </td>
                                            <td>$<%= cart[i].total %></td>
                                        </tr>
                                        <% } %>

                                        <tr>
                                            <td colspan="2">
                                                <h5 class="font-size-14 m-0">Sub Total :</h5>
                                            </td>
                                            <td>
                                                $<%= subTotal %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <h5 class="font-size-14 m-0">Discount :</h5>
                                            </td>
                                            <td>
                                                $00
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <h5 class="font-size-14 m-0">Shipping Charge :</h5>
                                            </td>
                                            <td>
                                                $00
                                            </td>
                                        </tr>
                                        <tr class="bg-light">
                                            <td colspan="2">
                                                <h5 class="font-size-14 m-0">Total :</h5>
                                            </td>
                                            <td>
                                                $<%= totalCartPrice  %>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>

    <script>

const addressRadios = document.querySelectorAll('input[name="address"]');
addressRadios.forEach(radio => {
    radio.disabled = false;
});

        document.getElementById('checkout-form').addEventListener('submit', function (e) {
    // Check if any address is selected
    const selectedAddress = document.querySelector('input[name="address"]:checked');
    if (!selectedAddress) {
        e.preventDefault(); // Prevent form submission

        // Find the address section
        const addressSection = document.querySelector('.checkout-item .feed-item-list');
        if (addressSection) {
            // Make the address section visible
            addressSection.style.display = 'block';
            addressSection.style.visibility = 'visible';
        }

        // Find the first address radio button
        const firstAddressRadio = document.querySelector('input[name="address"]');
        if (firstAddressRadio) {
            // Remove any disabling or focus-blocking styles
            firstAddressRadio.disabled = false;
            firstAddressRadio.focus();
        }

        // Show an error alert to prompt user action
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Please select an address before proceeding.',
        });
    }
});

    </script>
</body>

</html>
